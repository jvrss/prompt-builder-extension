{
  "manifest_version": 3,
  "name": "Prompt Builder",
  "version": "1.0",
  "description": "Build prompts in parts, concatenate, copy, and inject into ChatGPT",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
